{
  "name": "@battle-stadium/api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "sort-packages": "pnpx sort-package-json",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@battle-stadium/prettier-config",
  "dependencies": {
    "@battle-stadium/db": "workspace:*",
    "@battle-stadium/validators": "workspace:*",
    "@clerk/backend": "catalog:",
    "@clerk/clerk-react": "catalog:",
    "@clerk/nextjs": "catalog:",
    "@trpc/server": "catalog:",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@battle-stadium/eslint-config": "workspace:*",
    "@battle-stadium/prettier-config": "workspace:*",
    "@battle-stadium/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
