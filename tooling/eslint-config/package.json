{
  "name": "@battle-stadium/eslint-config",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "exports": {
    "./base": "./base.js",
    "./nextjs": "./nextjs.js",
    "./react": "./react.js",
    "./restrict-env-access": "./restrict-env-access.js"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "sort-packages": "pnpx sort-package-json",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm typecheck --watch"
  },
  "prettier": "@battle-stadium/prettier-config",
  "devDependencies": {
    "@battle-stadium/prettier-config": "workspace:*",
    "@battle-stadium/typescript-config": "workspace:*",
    "@eslint/compat": "catalog:eslint",
    "@next/eslint-plugin-next": "catalog:next",
    "@types/eslint-config-prettier": "catalog:eslint",
    "@types/eslint__eslintrc": "catalog:eslint",
    "@types/eslint__js": "catalog:eslint",
    "@typescript-eslint/eslint-plugin": "catalog:eslint",
    "@typescript-eslint/parser": "catalog:eslint",
    "eslint": "catalog:eslint",
    "eslint-config-prettier": "catalog:eslint",
    "eslint-plugin-import": "catalog:eslint",
    "eslint-plugin-jsx-a11y": "catalog:eslint",
    "eslint-plugin-only-warn": "catalog:eslint",
    "eslint-plugin-react": "catalog:react",
    "eslint-plugin-react-compiler": "catalog:react",
    "eslint-plugin-react-hooks": "catalog:react",
    "eslint-plugin-turbo": "catalog:eslint",
    "globals": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:eslint"
  },
  "engines": {
    "node": "22.x"
  }
}
