{
  "name": "@battle-stadium/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "eslintConfig": {
    "root": true
  },
  "packageManager": "pnpm@10.7.1",
  "prettier": "@battle-stadium/prettier-config",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "pnpm with-env next dev --turbopack",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "generate:api": "openapi-typescript ../../../backend/openapi/v1/openapi.yaml  -o ./src/lib/api/openapi-v1.d.ts && pnpm fix",
    "lint": "pnpm with-env next lint",
    "lint:fix": "pnpm lint --fix",
    "sort-packages": "pnpx sort-package-json",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm typecheck --watch",
    "vercel:pull": "vercel env pull .env.development.local",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@aws-sdk/credential-provider-web-identity": "catalog:vercel",
    "@battle-stadium/api": "workspace:*",
    "@battle-stadium/auth": "workspace:*",
    "@battle-stadium/db": "workspace:*",
    "@battle-stadium/ui": "workspace:*",
    "@battle-stadium/validators": "workspace:*",
    "@clerk/backend": "catalog:auth",
    "@clerk/clerk-react": "catalog:auth",
    "@clerk/nextjs": "catalog:auth",
    "@hookform/resolvers": "catalog:",
    "@next/bundle-analyzer": "catalog:next",
    "@next/third-parties": "catalog:next",
    "@pkmn/sets": "catalog:pokemon",
    "@pkmn/types": "catalog:pokemon",
    "@rails/actioncable": "catalog:rails",
    "@t3-oss/env-nextjs": "catalog:",
    "@tanstack/react-query": "catalog:tanstack",
    "@tanstack/react-table": "catalog:tanstack",
    "@trpc/client": "catalog:trpc",
    "@trpc/react-query": "catalog:trpc",
    "@trpc/server": "catalog:trpc",
    "@tsparticles/engine": "catalog:particles",
    "@tsparticles/react": "catalog:particles",
    "@tsparticles/slim": "catalog:particles",
    "@uploadthing/react": "catalog:",
    "@vercel/analytics": "catalog:vercel",
    "@vercel/flags": "catalog:vercel",
    "@vercel/functions": "catalog:vercel",
    "@vercel/kv": "catalog:vercel",
    "@vercel/speed-insights": "catalog:vercel",
    "babel-plugin-react-compiler": "catalog:",
    "cookie": "catalog:auth",
    "date-fns": "catalog:",
    "discord-api-types": "catalog:discord",
    "discord-interactions": "catalog:discord",
    "discord.js": "catalog:discord",
    "geist": "catalog:",
    "jose": "catalog:auth",
    "js-cookie": "catalog:auth",
    "next": "catalog:next",
    "openapi-fetch": "catalog:open-api",
    "openapi-typescript-helpers": "catalog:open-api",
    "pokedex-promise-v2": "catalog:pokemon",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "react-hook-form": "catalog:",
    "server-only": "catalog:",
    "sqlstring": "catalog:",
    "superjson": "catalog:",
    "tailwind-merge": "catalog:tailwind",
    "tailwind-variants": "catalog:tailwind",
    "tailwindcss-animate": "catalog:tailwind",
    "tweetnacl": "catalog:",
    "vercel": "catalog:vercel",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@battle-stadium/eslint-config": "workspace:*",
    "@battle-stadium/prettier-config": "workspace:*",
    "@battle-stadium/tailwind-config": "workspace:*",
    "@battle-stadium/tsconfig": "workspace:*",
    "@next/eslint-plugin-next": "catalog:next",
    "@types/js-cookie": "catalog:auth",
    "@types/node": "catalog:",
    "@types/rails__actioncable": "catalog:rails",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@types/sqlstring": "catalog:",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-config-next": "catalog:next",
    "eslint-config-prettier": "catalog:eslint",
    "jiti": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:"
  }
}
